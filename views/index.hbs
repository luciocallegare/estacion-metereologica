  <script type="text/javascript">

      setInterval(function() {
       $.get('/datos', (d,s) =>{
         $('#termometro').attr('value',d.temperatura)
         $('#viento').attr('value', d.viento )
         $('#digital_humedad').attr('value', '86' )
         //$('humedad').attr('value', d.humedad)
         
         const days = ["Sunday", "Monday", "Tuesday", "Wednesday", "Thursday", "Friday", "Saturday"];

        
         header_text = ''
         const dt = new Date();
         header_text += 'DATE: '+dt.getDate()+"/"+dt.getMonth()+"/"+dt.getFullYear();
         header_text += ' - TIME: '+dt.getHours()+":"+dt.getMinutes();
         header_text += '  '+days[dt.getDay()];
        $('#header_date').text(header_text);
        $('#digital_humedad').text('86%');
       })
      }, 100);

      
      
  </script> 
